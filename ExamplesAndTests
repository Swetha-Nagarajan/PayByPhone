#Fisrt example usage of module

module "aws_resource_naming" {
  source = "./aws_resource_naming"

  domain      = "reporting"
}

  
resource "aws_s3_bucket" "example" {
bucket = module.aws_resource_naming.name
}

#Second Example 

module "aws_resource_naming" {
  source = "./aws_resource_naming"

  domain      = "data"
  service_name = "foobar"
}

  
resource "aws_s3_bucket" "example" {
bucket = module.aws_resource_naming.name
}


# Third Example

module "aws_resource_naming" {
  source = "./aws_resource_naming"

  domain      = "reporting"
  environment = "development"
}

  
resource "aws_s3_bucket" "example" {
bucket = module.aws_resource_naming.name
}



#Fourth example

module "aws_resource_naming" {
  source = "./aws_resource_naming"

  domain      = "data"
  environment = "production"
  service_name = "foobar"
}

  
resource "aws_s3_bucket" "example" {
bucket = module.aws_resource_naming.name
}

